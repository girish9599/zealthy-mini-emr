generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  passwordHash  String
  appointments  Appointment[]
  prescriptions Prescription[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Appointment {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  provider     String
  start        DateTime
  repeat       String    @default("none")   // "none" | "weekly" | "monthly"
  repeatUntil  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Prescription {
  id             Int       @id @default(autoincrement())
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
  medication     String
  dosage         String
  quantity       Int
  refillOn       DateTime
  refillSchedule String    @default("monthly") // "monthly" | "weekly" | "none"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model MedicationRef {
  name String @id
}

model DosageRef {
  value String @id
}
